rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Classes folder - public read, admin write
    match /classes/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Coaches folder - public read, admin write
    match /coaches/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Testimonials folder - public read, admin write
    match /testimonials/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Features folder - public read, admin write
    match /features/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Hero folder - public read, admin write
    match /hero/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Media folder - public read, admin write
    match /media/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
